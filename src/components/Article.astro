---
import type { CollectionEntry } from 'astro:content';
import Prose from './Prose.astro';

interface Props {
  article: CollectionEntry<'blog'>;
}

const { article } = Astro.props;
const { Content } = await article.render();
---

<article>
  <header class="flex flex-col gap-1 mb-8 pb-6 border-b border-border dark:border-border-dark">
    <time class="text-sm text-fg-subtle dark:text-fg-subtle-dark">
      {article.data.pubDate.toLocaleDateString('ru-RU', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
    <h1 class="text-4xl font-normal text-fg dark:text-fg-dark">
      {article.data.title}
    </h1>
    {article.data.description && (
      <p class="text-lg text-fg-muted dark:text-fg-muted-dark">{article.data.description}</p>
    )}
  </header>
  <Prose>
    <Content />
  </Prose>
  <footer class="mt-12 pt-6 border-t border-border dark:border-border-dark">
    <a 
      href="/"
      class="text-accent dark:text-accent-dark hover:text-accent-hover dark:hover:text-accent-hover-dark transition-colors"
    >
      ← К списку статей
    </a>
  </footer>
</article>
