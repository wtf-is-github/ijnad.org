---
import type { CollectionEntry } from 'astro:content';

interface Props {
  article: CollectionEntry<'blog'>;
}

const { article } = Astro.props;
const { Content } = await article.render();
---

<article>
  <header class="mb-8 pb-6 border-b border-black">
    <h1 class="text-4xl font-normal mb-4 text-black">
      {article.data.title}
    </h1>
    {article.data.description && (
      <p class="text-lg text-gray-600 mb-4">{article.data.description}</p>
    )}
    <time class="text-sm text-gray-500">
      {article.data.pubDate.toLocaleDateString('ru-RU', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
      })}
    </time>
  </header>
  <div class="max-w-none [&_h1]:text-3xl [&_h1]:font-normal [&_h1]:mb-4 [&_h1]:mt-8 [&_h2]:text-2xl [&_h2]:font-normal [&_h2]:mb-3 [&_h2]:mt-6 [&_h3]:text-xl [&_h3]:font-normal [&_h3]:mb-2 [&_h3]:mt-4 [&_p]:mb-4 [&_p]:leading-relaxed [&_ul]:list-disc [&_ul]:ml-6 [&_ul]:mb-4 [&_ol]:list-decimal [&_ol]:ml-6 [&_ol]:mb-4 [&_li]:mb-2 [&_a]:text-black [&_a]:underline [&_a]:hover:opacity-70 [&_code]:bg-gray-100 [&_code]:px-1 [&_code]:py-0.5 [&_code]:rounded [&_pre]:bg-gray-100 [&_pre]:p-4 [&_pre]:rounded [&_pre]:overflow-x-auto [&_pre]:mb-4 [&_blockquote]:border-l-4 [&_blockquote]:border-black [&_blockquote]:pl-4 [&_blockquote]:italic [&_blockquote]:mb-4">
    <Content />
  </div>
  <footer class="mt-12 pt-6 border-t border-black">
    <a 
      href="/"
      class="text-black hover:opacity-70 transition-opacity"
    >
      ← Назад к списку статей
    </a>
  </footer>
</article>
