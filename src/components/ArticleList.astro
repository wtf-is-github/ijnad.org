---
import type { CollectionEntry } from 'astro:content';

interface Props {
  articles: CollectionEntry<'blog'>[];
}

const { articles } = Astro.props;
---

<div class="space-y-8">
  {articles.map((article) => (
    <article class="border-b border-black pb-6 last:border-0">
      <a 
        href={`/${article.slug}`}
        class="block hover:opacity-70 transition-opacity"
      >
        <h2 class="text-2xl font-normal mb-2 text-black">
          {article.data.title}
        </h2>
        {article.data.description && (
          <p class="text-gray-600 mb-2">{article.data.description}</p>
        )}
        <time class="text-sm text-gray-500">
          {article.data.pubDate.toLocaleDateString('ru-RU', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
      </a>
    </article>
  ))}
</div>
