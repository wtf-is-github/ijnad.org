---
import type { CollectionEntry } from 'astro:content';

interface Props {
  articles: CollectionEntry<'blog'>[];
}

const { articles } = Astro.props;
---

<div class="flex flex-col">
  {articles.map((article) => (
    <article class="border-b border-border dark:border-border-dark p-3 pt-4 last:border-0">
      <a 
        href={`/${article.slug}`}
        class="flex flex-col gap-1 hover:opacity-70 transition-opacity"
      >
        <h2 class="text-2xl font-normal text-fg dark:text-fg-dark">
          {article.data.title}
        </h2>
        {article.data.description && (
          <p class="text-fg-muted dark:text-fg-muted-dark">{article.data.description}</p>
        )}
        <time class="text-xs text-fg-subtle dark:text-fg-subtle-dark">
          {article.data.pubDate.toLocaleDateString('ru-RU', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
      </a>
    </article>
  ))}
</div>
